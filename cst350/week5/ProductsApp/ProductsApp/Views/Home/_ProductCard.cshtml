@model ProductsApp.ViewModels.ProductViewModel

@{
    var item = Model; 
}

<div class="card m-2" style="width: 100%;" data-id="@item.Id">
    @if (!string.IsNullOrEmpty(item.ImageURL))
    {
        <img src="/images/@item.ImageURL" alt="product image" height="200px"
         onerror="this.onerror=null;this.src='/images/image_unavailable.png'" />
    }
    else
    {
        <span>No Image Available</span>
    }
    <div class="card-body">
        <h5 class="card-title">@item.Name</h5>
        <p class="card-text">@item.Description</p>
        <p><strong>Price:</strong> @item.FormattedPrice</p>
        <p><strong>Created At:</strong> @item.FormattedDate</p>
        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View</a>
        <button class="btn btn-warning edit-product" data-id="@item.Id">Edit</button>
        |
        @Html.ActionLink("Details", "ShowProduct", new { id = item.Id }, new { @class = "btn btn-info"})
        |
        @Html.ActionLink("Delete", "DeleteProduct", new { id = item.Id }, new { @class = "btn btn-danger", 
        onclick = "return confirm('Are you sure you want to delete this product?');"})
    </div> <!-- End Card Body -->
</div><!-- End Card -->

