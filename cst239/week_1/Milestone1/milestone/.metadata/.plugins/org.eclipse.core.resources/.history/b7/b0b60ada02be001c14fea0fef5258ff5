package MainApp;

public class Cart
{
	private float paymentNeeded = 0;
	private int itemsInCart;
	
	public int GetItemsInCart() { return itemsInCart; }
	public float PaymentNeeded() { return paymentNeeded; }
	
	public void IncreasePaymentNeeded(float amount) {paymentNeeded = PaymentNeeded() + amount; }
	public void IncreaseItemsInCart(int amount) {itemsInCart = GetItemsInCart() + amount; }
	
	public void DecreasePaymentNeeded(float amount) {paymentNeeded = PaymentNeeded() + amount; }
	public void DecreaseItemsInCart(int amount) {itemsInCart = GetItemsInCart() + amount; }
}
